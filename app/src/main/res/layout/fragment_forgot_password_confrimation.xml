<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".authActivity.authfragments.ui.forgotpasswordconfirmation.forgotPasswordConfirmationFragment">

    <ImageView
        android:id="@+id/img_mail_sent"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        app:layout_constraintHeight_percent="0.4"
        android:src="@drawable/forgot_password_lock"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/txt_mail_sent"/>

    <TextView
        android:id="@+id/txt_mail_sent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Mail Sent"
        android:textColor="#000"
        android:textSize="40sp"
        android:textStyle="bold"
        android:typeface="normal"
        android:layout_marginTop="50dp"
        app:layout_constraintBottom_toTopOf="@id/txt_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_mail_sent"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/txt_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:text="Email has been sent to your registered email \nTo reset your password"
        android:textColor="#636262"
        android:typeface="normal"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/btn_back_to_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_mail_sent"
        tools:ignore="RtlSymmetry" />




    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_back_to_login"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.7"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Done"
        android:textColor="#fff"
        android:background="@drawable/button_corner"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:paddingVertical="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_description"/>

</androidx.constraintlayout.widget.ConstraintLayout>